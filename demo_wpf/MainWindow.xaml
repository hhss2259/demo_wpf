<Window x:Class="demo_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#1B4B36">
            <TextBlock Text="Demo WPF Application"  Foreground="White"  FontSize="24"  VerticalAlignment="Center"    HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1" Background="#E0E7F1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"  BorderBrush="Black" BorderThickness="1" Margin="5">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding FirstUiModel.Title}"  IsEnabled="{Binding FirstUiModel.IsEnabled}" Opacity="{Binding FirstUiModel.IsEnabled}"
                                   FontSize="15"  VerticalAlignment="Center" Margin="10, 0, 0, 0" FontWeight="Bold"  />
                        <Button Grid.Row="2" Margin="5" Content="{Binding FirstButton.Text}"></Button>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="White" BorderBrush="Black" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions >
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="UI 요소2"  FontSize="15"  VerticalAlignment="Center" Margin="10, 0, 0, 0" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1" Background="White" BorderBrush="Black" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions >
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="UI 요소3"  FontSize="15"  VerticalAlignment="Center" Margin="10, 0, 0, 0" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Row="2">
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                        <Button Content="버튼2(UI 요소6)"></Button>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Border   BorderBrush="Black" BorderThickness="1" Margin="5">
                    <Grid Background="White" >
                        <Grid Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Text="UI 요소4"  FontSize="15"  VerticalAlignment="Center" Margin="10, 0, 0, 0" FontWeight="Bold"/>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="버튼3(UI 요소7)" Width="100" Margin="10"></Button>
                                <Button Content="버튼4(UI 요소8)" Width="100" Margin="10"></Button>
                                <Button Content="버튼5(UI 요소9)" Width="100" Margin="10"></Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Background="#E8E8E8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="상태 변화 버튼"  FontSize="15"  VerticalAlignment="Center" Margin="10, 0, 0, 0" FontWeight="Bold"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="장치 연결" Margin="10"></Button>
                    <Button Grid.Column="1" Content="장치 연결 해제" Margin="10"></Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
